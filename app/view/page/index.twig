            {% for instagram_farol_midia in instagram_farol_midias.data %}
              <div class="row" style="margin-bottom:5px;">
                <a href="https://www.instagram.com/farol360/"><img src="{{ instagram_farol.data.profile_picture }}" style="width:35px; border-radius:50%; border-style:solid; border-color:#ddd; border-width:1px;"></a> <a href="https://www.instagram.com/farol360/"><span style="font-weight:500;">{{ instagram_farol.data.username }} </span></a>
              </div>
              <div class="row">
                {% if instagram_farol_midia.type == "image" %}
                  <a href="{{ instagram_farol_midia.link }}"><img src="{{ instagram_farol_midia.images.standard_resolution.url }}" style=""></a>
                {% else %}
                  <a href="{{ instagram_farol_midia.link }}"><video controls><source src="{{ instagram_farol_midia.videos.standard_resolution.url }}" type="video/mp4" style=""></video> </a>
                {% endif %}
              </div>

              <div class="row" style="margin-top: 5px;">
                <p style=""><span style="font-weight:500;">{{ instagram_farol.data.username }} </span>{{ instagram_farol_midia.caption.text }}</p>
