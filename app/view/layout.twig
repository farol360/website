    <!--  Material Dashboard CSS    -->
    <link href="{{ base_url() }}/css/material-dashboard.css?v=1.2.0" rel="stylesheet" />

    <!-- Use this when you generate app from sass !-->
    <link href="{{ base_url() }}/css/app.css" rel="stylesheet">


