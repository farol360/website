                    {%- endif %}
                      <li><a href="{{ base_url() }}/users/signout">Sair</a></li>
                  </ul>
                </li>
              {%- else %}
                {# <li><a href="{{ base_url() }}/users/signin">Login</a></li> #}
                {#<li><a href="{{ base_url() }}/users/signup">Registrar</a></li> #}
              {%- endif %}
            </ul>
          </div>
