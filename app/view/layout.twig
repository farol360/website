              {# <li {% if nav_active == 'planos' %} class="active" {% else %} {% endif %}><a style="color:black;" href="{{ base_url() }}/planos">Planos</a></li> #}
              {%- if is_auth() %}
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

                    Olá, {{ get_name() }} <i class="material-icons" style="color:black;">account_circle</i>
