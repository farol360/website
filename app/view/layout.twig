                    <li><a href="{{ base_url() }}/users/profile" style="color:black;">Meu Perfil</a></li>
                    <li role="separator" class="divider" ></li>
                    {% if p_admin -%}
                      <li><a href="{{ base_url() }}/admin" style="color:black;">Administração</a></li>
                      <li role="separator" class="divider" style="color:black;"></li>
                    {%- endif %}
                      <li><a href="{{ base_url() }}/users/signout" style="color:black;">Sair</a></li>
                  </ul>
